.signup-container

  %header.signup-header
    %h1
      = link_to root_path do
        = image_tag 'fmarket_logo_red.svg', alt: 'mercari'
    %nav.signup-header__progress-bar.signup-header__bar
      %ol.clearfix
        %li.signup-header__list.signup-header__list--active
          会員情報
          .signup-header__progress-status
        %li.signup-header__list
          電話番号認証
          .signup-header__progress-status
        %li.signup-header__list
          住所入力
          .signup-header__progress-status
        %li.signup-header__list
          支払い方法
          .signup-header__progress-status
        %li.signup-header__list
          完了
          .signup-header__progress-status

  %main.signup-main
    %section.signup-main__container
      %h2.signup-main__head.signup-main__head--registration
        会員情報入力
      = form_for @user, url: sms_signup_index_path, method: 'GET',  class: 'signup-main__inner signup-main__inner--registration-form' do |f|
        .signup-main__content
          .signup-main__form-group
            = f.label 'ニックネーム', class: 'signup-main__label'
            %span.signup-main__form-require 必須  
            = f.text_field :nickname, { class: 'signup-main__input-default', placeholder: '例) メルカリ太郎' }
          
          .signup-main__form-group
            = f.label 'メールアドレス', class: 'signup-main__label'
            %span.signup-main__form-require 必須
            = f.email_field :email, { class: 'signup-main__input-default', placeholder: 'PC・携帯どちらでも可' }

          .signup-main__form-group.signup-main__form-password
            = f.label 'パスワード', class: 'signup-main__label'
            %span.signup-main__form-require 必須
            = f.password_field :password, { class: 'signup-main__input-default', placeholder: '7文字以上' }

          .signup-main__form-group
            = f.label 'パスワード (確認)', class: 'signup-main__label'
            %span.signup-main__form-require 必須
            = f.password_field :password_confirmation, { class: 'signup-main__input-default', placeholder: '7文字以上' }       
          
          .signup-main__form-group
            %div
            = f.submit '次へ進む', class: 'signup-main__btn-default signup-main__btn-red'
              
          

  .signup-footer
    %nav
      %ul.clearfix
        %li
          = link_to root_path do
            プライバシーポリシー
        %li
          = link_to root_path do
            メルカリ利用規約
        %li
          = link_to root_path do
            特定商取引に関する表記
    = link_to root_path, class: 'signup-footer__logo' do
      = image_tag 'fmarket_logo_white.svg', alt: 'mercari', height: '65', width: '80'
    %p
      %small
        © 2019 Mercari